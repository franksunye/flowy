{
  "name": "flowy",
  "version": "1.0.0",
  "description": "A minimal javascript library to create flowcharts",
  "main": "dist/flowy.js",
  "files": [
    "dist/",
    "src/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "vite build",
    "build:lib": "vite build --mode library",
    "dev": "vite",
    "preview": "vite preview",
    "serve": "vite preview --port 3000",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest tests/unit --verbose",
    "test:integration": "jest tests/integration --verbose",
    "test:performance": "node tests/performance/run-performance-tests.js",
    "test:e2e": "node tests/e2e-test.js",
    "test:comparison": "node tests/flowy-comparison.js",
    "test:watch": "jest tests/unit --watch",
    "test:coverage": "jest tests/unit --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/franksunye/flowy.git"
  },
  "keywords": [
    "flowchart",
    "diagram",
    "drag-drop",
    "javascript",
    "library"
  ],
  "author": "Alyssa X",
  "license": "MIT",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "dependencies": {
    "playwright": "^1.54.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@vitejs/plugin-legacy": "^7.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^23.2.0",
    "terser": "^5.43.1",
    "vite": "^7.0.5"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/unit/setup.js"
    ],
    "testMatch": [
      "**/tests/unit/**/*.test.js",
      "**/tests/integration/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.min.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
